import java.util.*;
class Marging2Daarray 
{
	public static void main(String[] args) 
	{
		
    int arr[][]={{1,2,3},{1,2,3,4},{7,8,5,5,2,1,3}};
	
	int size=0;
	for(int ele[]:arr)
		size+=ele.length;
	
	int marge[]=new int[size];
	
	System.out.print(Arrays.toString(marge));
	int i=0;
	for(int ele[]: arr){
		for(int e: ele) 
			marge[i++]=e;
	}
	System.out.print(Arrays.toString(marge));
}
}